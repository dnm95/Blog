<div class="row">
  <div class="col s12 m6 offset-m3 login-container white z-depth-1">
    <h2>Nueva Categoría</h2>

    <%= form_with(model: category, local: true) do |form| %>
      <% if category.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>
          
          <ul>
          <% category.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <!-- INPUT NOMBRE CATEGORIA -->
      <div class="input-field">
        <i class="material-icons prefix">title</i>
        <%= form.text_field :name, id: :category_name, autocomplete:"off", required:"true" %>
        <label for="category_name">Título</label>
      </div>
      
      <!-- INPUT COLOR CATEGORIA -->
      <div class="input-field">
        <span class="label-input-color">Color:</span>
        <%= form.color_field :color, id: :category_color %>
      </div>

      <div class="clearfix"></div>

      <!-- BOTON DE GUARDAR -->
      <div class="right">
          <%= form.submit "Guardar", class:"waves-effect waves-light btn light-blue darken-2" %>
      </div>
    <% end %>
  </div>
</div>

