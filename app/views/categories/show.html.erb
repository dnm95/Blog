<p id="notice"><%= notice %></p>

<div class="row">
    <div class="col s12 col m12 article-list-header valign-wrapper">
        <h2 class="truncate" style="color:<%= @category.color %>;"><%= @category.name %></h3>
        <div class="clearfix"></div>
    </div>
</div>

<div class="row">
    <% @category.articles.each do |article| %>
        <div class="col s12 m6 l4">
            <div class="card">
                <div class="card-content">
                    <span class="card-title center-align"><%= link_to article.title, article %></span>
                    <div>
                        <%= image_tag article.cover.url(), class:"responsive-img center-align"%>
                    </div>
                    <p class="truncate"><%= article.body%></p>
                </div>
                <div class="card-action center-align">
                    <%= link_to "Ver ArtÃ­culo", article %>
                    <!--<%= link_to "Eliminar", article, method: :delete %>-->
                </div>
            </div>
        </div>
    <%end%>
</div>

