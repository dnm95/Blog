<div class="row">
    <div class="col s12 col m12 light-blue darken-4 article-list-header valign-wrapper">
        <h2 class="truncate">Artículos</h3>
        <div class="clearfix"></div>
    </div>
</div>

<div class="row">
    <%= render @articles %>
</div>

<div class="row">
    <div class="col s12 center-align">
        <%= will_paginate @articles %>
    </div>
</div>

<!-- BOTON DE AÑADIR ARTICULO -->
<% if user_signed_in? %>
    <div class="fixed-action-btn">
        <%= link_to new_article_path(@article), class:" btn-large btn-floating blue-grey darken-1" do %>
        <i class="material-icons">add</i><%end%>
    </div>
<%end%>