<div class="row">
    <div class="col s12 col m12 article-list-header valign-wrapper">
        <h2 class="truncate">Artículos</h3>
        <div class="clearfix"></div>
    </div>
</div>

<div class="row">
    <% @articles.each do |article| %>
        <div class="col s12 m6 l4">
            <div class="card">
                <div class="card-content">
                    <span class="card-title center-align"><%= link_to article.title, article %></span>
                    <div>
                        <%= image_tag article.cover.url(), class:"responsive-img center-align"%>
                    </div>
                    <p class="truncate"><%= article.body%></p>
                    <div class="visits">
                        Visitas: <%= article.visits_count%>                    
                    </div>
                </div>
                <div class="card-action center-align">
                    <%= link_to "Ver Artículo", article %>
                    <!--<%= link_to "Eliminar", article, method: :delete %>-->
                </div>
            </div>
        </div>
    <%end%>
</div>

<!-- BOTON DE AÑADIR ARTICULO -->
<% if user_signed_in? %>
    <div class="fixed-action-btn">
        <%= link_to new_article_path(@article), class:" btn-large btn-floating blue-grey darken-1" do %>
        <i class="material-icons">add</i><%end%>
    </div>
<%end%>